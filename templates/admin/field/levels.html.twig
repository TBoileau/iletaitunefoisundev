{# @var ea \EasyCorp\Bundle\EasyAdminBundle\Context\AdminContext #}
{# @var field \EasyCorp\Bundle\EasyAdminBundle\Dto\FieldDto #}
{# @var entity \EasyCorp\Bundle\EasyAdminBundle\Dto\EntityDto #}
{% if ea.crud.currentAction == 'detail' %}
    <ul class="list-group">
    {% for level in field.value %}
        {% set url = ea_url().setDashboard('App\\Admin\\Controller\\DashboardController').setController('App\\Admin\\Controller\\LevelCrudController').setAction('detail').setEntityId(level.id) %}
        <li class="list-group-item">
            <a href="{{ url }}">{{ level }}</a>
        </li>
    {% else %}
        <li class="list-group-item">Aucun niveau</li>
    {% endfor %}
</ul>
{% else %}
    <span class="badge badge-secondary">{{ field.formattedValue }}</span>
{% endif %}
